<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_medium_size"
    android:paddingTop="@dimen/padding_medium_size">

    <TextView
        android:id="@+id/serie_title"
        style="@style/serie_title_download"
        android:layout_width="@dimen/padding_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_small_size"
        android:layout_marginRight="@dimen/padding_small_size"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/serie_subtitle"
        style="@style/serie_subtitle_download"
        android:layout_width="@dimen/padding_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_normal_size"
        android:layout_marginLeft="@dimen/padding_small_size"
        android:layout_marginRight="@dimen/padding_small_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serie_title"/>

    <TextView
        android:id="@+id/serie_percentage"
        style="@style/serie_subtitle_download"
        android:layout_width="@dimen/padding_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_small_size"
        android:layout_marginRight="@dimen/padding_small_size"
        android:gravity="right"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@+id/serie_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/serie_status"
        style="@style/serie_subtitle_download"
        android:layout_width="@dimen/padding_zero_size"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_normal_size"
        android:layout_marginLeft="@dimen/padding_small_size"
        android:layout_marginRight="@dimen/padding_small_size"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="@+id/serie_subtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serie_percentage"/>

</android.support.constraint.ConstraintLayout>
