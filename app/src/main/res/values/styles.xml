<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MyText">
        <item name="android:textSize">@dimen/item_medium</item>
    </style>

    <style name="MyText.White" parent="MyText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyText.Colored" parent="MyText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyText.Small" parent="MyText">
        <item name="android:textSize">@dimen/item_small</item>
    </style>

    <style name="MyText.Medium" parent="MyText">
        <item name="android:textSize">@dimen/item_medium</item>
    </style>

    <style name="MyText.Large" parent="MyText">
        <item name="android:textSize">@dimen/item_large</item>
    </style>

    <style name="MyText.Big" parent="MyText">
        <item name="android:textSize">@dimen/item_big</item>
    </style>

    <style name="MyText.White.Small" parent="MyText.White">
        <item name="android:textSize">@dimen/item_small</item>
    </style>

    <style name="MyText.White.Medium" parent="MyText.White">
        <item name="android:textSize">@dimen/item_medium</item>
    </style>

    <style name="MyText.White.Large" parent="MyText.White">
        <item name="android:textSize">@dimen/item_large</item>
    </style>

    <style name="MyText.White.Big" parent="MyText.White">
        <item name="android:textSize">@dimen/item_big</item>
    </style>

    <style name="MyText.Colored.Small" parent="MyText.Colored">
        <item name="android:textSize">@dimen/item_small</item>
    </style>

    <style name="MyText.Colored.Medium" parent="MyText.Colored">
        <item name="android:textSize">@dimen/item_medium</item>
    </style>

    <style name="MyText.Colored.Large" parent="MyText.Colored">
        <item name="android:textSize">@dimen/item_large</item>
    </style>

    <style name="MyText.Colored.Big" parent="MyText.Colored">
        <item name="android:textSize">@dimen/item_big</item>
    </style>

    <style name="serie_title" parent="MyText.Large">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="serie_description" parent="MyText.Small">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="serie_empty" parent="MyText.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/padding_very_big_size</item>
        <item name="android:text">@string/error_series_list_empty</item>
    </style>

    <style name="serie_error" parent="MyText.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/padding_very_big_size</item>
        <item name="android:text">@string/error_series_list</item>
    </style>

</resources>
